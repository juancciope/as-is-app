# Apify Configuration
APIFY_API_TOKEN=your_apify_api_token_here
APIFY_ACTOR_ID_TNLEDGER=hallow_arbor/tnledger-foreclosure-scraper
APIFY_ACTOR_ID_PJ=your_phillip_jones_actor_id
